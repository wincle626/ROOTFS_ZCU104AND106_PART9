  draw (p shifted (7.5ut+25ut-breit/2,hoch/2)) scaled1.25;
  draw( q rotated 58 shifted (20ut,20ut)) scaled1.25;
  draw (z0{1,-2}..{dir 58}(7.5ut+25ut,40ut)) scaled1.25;
endchar;

